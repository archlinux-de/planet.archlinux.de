{% extends 'base.html.twig' %}

{% block title %}Planet{% endblock %}

{% block robots %}noindex{% endblock %}

{% block body %}
    <div class="row m-0">
        <div class="col-12 col-xl-9 pl-0 pr-0 pr-xl-4">
            <h1 class="p-2 p-xl-3">planet.archlinux.de</h1>
            <div class="container-fluid">
                {% for item in items %}
                    <div class="mb-5">
                        <div class="d-lg-flex justify-content-between align-items-baseline border border-top-0 border-left-0 border-right-0 mb-2">
                            <h2 class="p-0 break-word">
                                <a href="{{ item.link }}">{{ item | item_title }}</a>
                            </h2>
                            <div class="p-0">{{ item.lastModified | date('d.m.Y') }}</div>
                        </div>
                        <div class="item-description break-word mw-100">
                            {{ item | item_description }}
                        </div>
                        {% if item.author.name %}
                            <div class="font-italic">
                                {% if item.author.uri %}
                                    <a href="{{ item.author.uri }}" rel="nofollow">{{ item.author.name }}</a>
                                {% else %}
                                    {{ item.author.name }}
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="col-12 col-xl-3">
            <div class="card mb-4">
                <h3 class="card-title card-header">Dein Blog bei planet.archlinux.de</h3>
                <div class="card-body">
                    Wenn auch Du Dein Blog bei planet.archlinux.de hinzufügen möchtest, melde Dich einfach bei
                    <a href="mailto:pierre@archlinux.de">pierre@archlinux.de</a>
                </div>
            </div>

            <div class="card">
                <h3 class="card-title card-header">Feeds</h3>
                <div class="card-body p-1 p-lg-3">
                    <ul class="list-unstyled pl-4">
                        {% for feed in feeds %}
                            <li><a href="{{ feed.link }}" title="{{ feed.description }}">{{ feed.title }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
